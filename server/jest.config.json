{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "gameLogic/**/*.js",
    "server.js",
    "!**/node_modules/**",
    "!**/tests/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true
}
